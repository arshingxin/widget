<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MitakeAlertDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations_PopUpMenu" />

    <style name="Animations_PopUpMenu_Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations_PopUpMenu_Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations_PopUpMenu_Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations_PopUpMenu_Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_bottom</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>

    <!-- PopDownMenu -->
    <style name="Animations_PopDownMenu" />

    <style name="Animations_PopDownMenu_Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations_PopDownMenu_Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations_PopDownMenu_Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations_PopDownMenu_Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_top</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>

    <style name="phone_Animation.Dialog.BottomIn300" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/phone_i_anim_bottom_in_300</item>
        <item name="android:windowExitAnimation">@anim/phone_i_anim_bottom_out_300</item>
    </style>

    <style name="CustomDialogStyle" parent="@android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- PopDownMenu -->
    <style name="Custom" />
    <style name="Custom.Animation" />

    <style name="Custom.Animation.PopDown" />
    <style name="Custom.Animation.PopDown.Left">
        <item name="@android:windowEnterAnimation">@anim/custom_grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/custom_shrink_from_bottomright_to_topleft</item>
    </style>
    <style name="Custom.Animation.PopDown.Right">
        <item name="@android:windowEnterAnimation">@anim/custom_grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/custom_shrink_from_bottomleft_to_topright</item>
    </style>
    <style name="Custom.Animation.PopDown.Center">
        <item name="@android:windowEnterAnimation">@anim/custom_grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/custom_shrink_from_bottom</item>
    </style>

    <style name="Custom.Animation.PopUp" />
    <style name="Custom.Animation.PopUp.Left">
        <item name="@android:windowEnterAnimation">@anim/custom_grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/custom_shrink_from_topright_to_bottomleft</item>
    </style>
    <style name="Custom.Animation.PopUp.Right">
        <item name="@android:windowEnterAnimation">@anim/custom_grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/custom_shrink_from_topleft_to_bottomright</item>
    </style>
    <style name="Custom.Animation.PopUp.Center">
        <item name="@android:windowEnterAnimation">@anim/custom_grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/custom_shrink_from_top</item>
    </style>

</resources>
